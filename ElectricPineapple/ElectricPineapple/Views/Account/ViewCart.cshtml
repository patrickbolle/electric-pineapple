@model ElectricPineapple.Order

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Cart</h1>
    </div>
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
    @if(Model != null)
    { 
    if(Model.Games.Count != 0)
    {
        double total = 0;
        
    <table class="table table-bordered table-hover table-striped">
        <thead>
        <tr><td>Title</td><td>Price</td><td></td>
        </tr>
        </thead>
        <tbody>
        @foreach (Game item in Model.Games)
        {
            <tr>
                <td>@item.title</td>
                <td>$@item.price</td>
                <td><a href="@Url.Action("RemoveCartItem", "Account", new { id = item.gameID })" >Remove from cart</a></td>            
            </tr>
            total += @item.price;
        }
        <tr><td></td><td>Total: $@total</td><td></td></tr>
        </tbody>
    </table>
    }
    else
    {
        <p>Your cart is empty.</p>
    }
    }
    else
    {
        <p>Your cart is empty.</p>
    }        
    </div>
</div>