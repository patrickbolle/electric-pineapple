@model ElectricPineapple.CVGSUser

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">User Details</h1>
    </div>
</div>

<div>
    <h4>User Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            First Name:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.firstName)
        </dd>

        <dt>
            Last name:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.lastName)
        </dd>

        <dt>
            User Name:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.userName)
        </dd>

        <dt>
            E-Mail Address:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.email)
        </dd>

        <dt>
            City:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.city)
        </dd>

        <dt>
            Gender:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.gender)
        </dd>


        <dt>
            Personal Info:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.profileInfo)
        </dd>


        <dt>
            Province:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Province1.province1)
        </dd>


    </dl>
</div>
@if ((bool)ViewData["areFriends"])
{
    int i = 0;
    <h3>Wishlist: </h3>
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <td>Title</td>
                <td>Price</td>
            </tr>
        </thead>
        <tbody>
            @foreach (Game item in (List<Game>)ViewData["userWishlist"])
            {
                i++;
                <tr>
                    <td>@item.title</td>
                    <td>$@item.price</td>
                </tr>
            }
            @if(i==0)
            {
                <tr><td>Wishlist is empty</td><td></td></tr>
            }
        </tbody>
    </table>
}


<p>
    @Html.ActionLink("Back to List", "Index")
</p>
