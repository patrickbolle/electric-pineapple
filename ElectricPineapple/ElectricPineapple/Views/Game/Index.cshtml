@model IEnumerable<ElectricPineapple.Game>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Games</h1>
    </div>
</div>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Title
        </th>
        <th>
            Genre
        </th>
        <th>
            Platform
        </th>
        <th>
            ESRB Rating
        </th>
        <th>
            Release Date
        </th>
        <th>
            Price
        </th>
        <th>
            Description
        </th>
        <th>
            Company
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre1.genre1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Platform1.platform1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ESRBRating1.rating)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.releaseDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Publisher1.publisher1)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.gameID }) |
            @Html.ActionLink("Details", "Details", new { id=item.gameID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.gameID })
        </td>
    </tr>
}

</table>
