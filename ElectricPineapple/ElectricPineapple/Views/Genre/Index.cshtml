@model IEnumerable<ElectricPineapple.Genre>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Genres</h1>
    </div>
</div>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.genre1)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.genre1)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.genreID }) |
            @Html.ActionLink("Details", "Details", new { id=item.genreID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.genreID })
        </td>
    </tr>
}
</table>

@{int i = 0;}
@foreach (var item in Model)
{
    if (i == 0)
    {
        @:<div class="row">
        @:<div class="col-lg-12">
	}
    <div class="col-md-3">
        <div class="panel panel-default">
            <div class="panel-heading">
                <a href=@Url.Action("Details", "Genre", new {id = item.genreID})>
                    <h3 class="panel-title">@item.genre1</h3>
                </a>
            </div>
            <div class="panel-body">
                <a href=@Url.Action("Details", "Genre", new { id = item.genreID })>
                    <img src="~/Content/images/publishers/@item.imagePath" width="155" height="220" />
                </a>
                <span class="panel-game-info">
                    @item.genre1<br /><br />
                    <input class="btn btn-add-to-cart" type="button" value="View Games" />
                </span>
            </div>
        </div>
    </div>

    i++;
    if (i == 4)
    {
        i = 0;
        @:</div>
        @:</div>
}

}
@if (i != 0)
{
    @:</div>
    @:</div>
}