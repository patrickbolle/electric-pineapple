@model ElectricPineapple.Models.IndexViewModel

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Manage</h1>
    </div>
</div>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Change your account settings</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Password:</dt>
        <dd>
            
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Change your password", "ChangePassword", "Account")
            }
            else
            {
                @Html.ActionLink("Create", "SetPassword")
            }
            
        </dd>
        <dt>Change Credit Card Settings:</dt>
        <dd>
            @Html.ActionLink("Credit Card Settings", "Index", "CreditCards")
        </dd>
        <dd>
            @using (Html.BeginForm("Index", "Manage", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <p>Receive promotional emails:           
                @Html.CheckBoxFor(x => x.ReceivePromotions)</p>
                <p>Choose a favourite genre</p>
                @Html.DropDownList("GenresList", null, htmlAttributes: new { @class = "form-control" })
                <p>Choose a favourite platform</p>
                @Html.DropDownList("PlatformsList", null, htmlAttributes: new { @class = "form-control" })
                <br/>   
                <input type="submit" value="Save"/> 
            }
        </dd>
    </dl>
</div>
